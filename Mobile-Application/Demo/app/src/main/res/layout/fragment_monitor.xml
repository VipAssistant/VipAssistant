<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/beacon_status_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_centerHorizontal="true">
        <LinearLayout
                android:id="@+id/beacon_status_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/beacon_status_icon"
                    android:layout_height="fill_parent"
                    android:layout_width="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_done_all_w_24dp"
                    android:padding="15dip"
                    android:contentDescription="@string/nav_helper_icon"/>

            <TextView
                    android:id="@+id/beacon_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:text="Oops! You get signals from only %s out of 5 beacons in this building.\n\n You can send a status report to VipAssistant Support team to let them know about this issue."
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
        </LinearLayout>

        <Button android:id="@+id/beacon_status_report_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_below="@id/beacon_status_ll"
                android:layout_centerHorizontal="true"
                android:text="Report this issue"/>
   </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAPH TO HERE"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="32dp"
            android:layout_below="@id/beacon_status_rl"
            android:layout_centerHorizontal="true"/>

