<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"> <!-- TODO: check match_parent for both in constraint layout -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".voice.output.MainActivity">

        <TextView
                android:id="@+id/voutput1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/voutput_welcome"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#FFF"
                android:background="@drawable/text_style"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

        <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/voutput1"
                android:hint="@string/enter_text" />

        <TextView
                android:id="@+id/pitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pitch"
                android:textSize="16sp"
                android:layout_below="@+id/edit_text"/>

        <SeekBar
                android:id="@+id/seek_bar_pitch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="50"
                android:layout_below="@+id/pitch"/>

        <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speed"
                android:textSize="16sp"
                android:layout_below="@+id/seek_bar_pitch"/>

        <SeekBar
                android:id="@+id/seek_bar_speed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:progress="50"
                android:layout_below="@+id/speed"/>

        <Button
                android:id="@+id/button_speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:enabled="false"
                android:text="@string/start_conversion"
                android:layout_below="@+id/seek_bar_speed"/>
    </RelativeLayout>
</ScrollView>
